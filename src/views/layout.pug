doctype html
html(lang='en')
  head
    title tgifi
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html,
      body {
        width: 100%;
      	background: #fff;
      	font-family: 'Helvetica Neue';
      	color: #2e3d49;
      }

      header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        min-height: 80px;
        text-align: center;
        padding-top: 20px;
        border-bottom: 3px solid #6a60ad;
      }

      main, 
      div {
        width: 100%;
        margin: 0;
        padding: 0;
      }

      .container {
        margin: 100px auto;
      }
      
      .login-heading, 
      .signup-heading,
      .form-container {
      	width: 80%;
        margin: 20px auto;
      }

      .login-heading,
      .signup-heading {
      	color: #6a60ad;
      	font-size: 1.3em;
      	text-align: center;
      }
     
      .error-container {
        margin-top: 20px;
        margin-bottom: 20px;
        text-align: center;
        color: #f1404b;
      }
      .signin-container,
      .signup-container,
      .login-container {
      	margin-top: 25px;
      }

      button {
       height: 50px;
       width: 100%;
       background: #58C9B9;
       border: none;
       border-radius: 3px;
       font-size: 1.2em;
       color: #fff;
       cursor: pointer;
      }

      input[type="text"],
      input[type="password"],
      input[type="email"] {
        width: 100%;
        height: 50px;
        padding-left: 20px;
        padding-right: 20px;
        border: 1px solid #dbe2e8;
        font-size: 1em;
        box-shadow: 0 2px 2px 0 rgba(46,60,73,.05);
        border-radius: 3px;
      }

      a {
        text-decoration: none;
      }

      .social-message {
        margin-top: 20px;
        margin-bottom: 20px;
        color: #6a60ad;
        text-align: center;
      }

      .github,
      .facebook,
      .signup,
      .login {
      	width: 100%;
      	height: 50px;
      	display: block;
        /*border: 1px solid #fafafa;*/
        border: 1px solid #6a60ad;
      	padding: 15px;
      	border-radius: 3px;
      	color: #2e3d49;
      	text-align: center;
      }

      .github,
      .facebook {
      	margin: 5px auto;
      }

      @media only screen and (min-width: 500px) {
         .login-heading, 
         .form-container {
           width: 70%;
        }
      }

      @media only screen and (min-width: 600px) {
         .login-heading, 
         .form-container {
           width: 60%;
        }
      }

      @media only screen and (min-width: 700px) {
         .login-heading, 
         .form-container {
           width: 50%;
        }
      }

      @media only screen and (min-width: 800px) {
         .login-heading, 
         .form-container {
           width: 40%;
        }
      }

       @media only screen and (min-width: 1000px) {
         .login-heading, 
         .form-container {
           width: 30%;
        }
      }

  body
    block content