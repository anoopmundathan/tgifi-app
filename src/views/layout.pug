doctype html
html(lang='en')
  head
    title tgifi
    style.

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html,
      body {
        width: 100%;
      	background: #dedcee;
      	font-family: 'Helvetica Neue';
      	color: #2e3d49;
      }

      header {
        width: 100%;
        min-height: 60px;
        background: #6a60ad;
        color: #fafafa;
        text-align: center;
        padding-top: 10px;
      }

      main, 
      div {
        width: 100%;
        margin: 0;
        padding: 0;
      }

      .container {
        margin: 10px auto;
      }
      
      .login-heading, 
      .form-container {
      	width: 80%;
        margin: 20px auto;
      }

      .login-heading {
      	color: #6a60ad;
      	font-size: 1.3em;
      	text-align: center;
      }
     
      .password-container {
        margin-top: 20px;
      }
      .signin-container {
      	margin-top: 25px;
      }

      button {
       height: 50px;
       width: 100%;
       background: #58C9B9;
       border: none;
       border-radius: 3px;
       font-size: 1.2em;
       color: #fff;
      }

      input {
        width: 100%;
        height: 50px;
        padding-left: 20px;
        padding-right: 20px;
        border: 1px solid #dbe2e8;
        font-size: 1em;
        box-shadow: 0 2px 2px 0 rgba(46,60,73,.05);
        border-radius: 3px;
      }

      a {
        text-decoration: none;
      }

      .social-message {
        margin-top: 20px;
        margin-bottom: 20px;
        color: #6a60ad;
        text-align: center;
      }

      .github,
      .facebook,
      .signup {
      	width: 100%;
      	height: 50px;
      	display: block;
        border: 1px solid #fafafa;
      	padding: 15px;
      	border-radius: 3px;
      	color: #2e3d49;
      	text-align: center;
      }

      .github,
      .facebook {
      	margin: 5px auto;
      }

  body
    block content